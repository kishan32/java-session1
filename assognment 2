#include <iostream>
	using namespace std;
	
	int main()
	{
		int number;
		char character;
	
		cout << "Type in a character:\n";
		cin >> character;
	
		number = character;
	
		cout << "The character '" << character;
		cout << "' is represented as the number ";
		cout << number << " in the computer.\n";
	
		return 0;
	}
